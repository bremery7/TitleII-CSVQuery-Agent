# ==============================================
# AI Data Agent - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ==============================================
# SECURITY SECRETS
# ==============================================
# Generate strong secrets using: openssl rand -base64 32
# These MUST be different in production!

# NextAuth Secret (32+ characters, random)
NEXTAUTH_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_STRING_AT_LEAST_32_CHARS

# Session Secret (32+ characters, random)
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_SECRET_STRING_32_CHARS

# JWT Secret for backend authentication (32+ characters, random)
JWT_SECRET=CHANGE_THIS_TO_YET_ANOTHER_RANDOM_SECRET_STRING_32_CHARS

# Auth Secret (alternative to NEXTAUTH_SECRET)
AUTH_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_STRING_AT_LEAST_32_CHARS

# ==============================================
# APPLICATION URLs
# ==============================================

# Frontend URL (where Next.js runs)
NEXTAUTH_URL=http://localhost:3000

# Backend API URL (where Express server runs)
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ==============================================
# OPENAI API
# ==============================================

# Your OpenAI API key (required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

# Resend API Key (for sending emails)
RESEND_API_KEY=re_your_resend_api_key_here

# Email sender address
EMAIL_FROM=noreply@yourdomain.com

# ==============================================
# DATABASE & STORAGE
# ==============================================

# Port for backend server
PORT=3001

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# Uncomment and set these for production deployment

# NODE_ENV=production
# NEXTAUTH_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL=https://yourdomain.com
# FRONTEND_URL=https://yourdomain.com
